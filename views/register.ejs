<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-4 fw-bold"><i class="fas fa-user-plus"></i> Register</h1>
            <%- include('./partials/messages') -%>
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control mb-2 mt-1" placeholder="Enter name" value="<%= typeof name !='undefined' ? name: '' %>" />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control mb-2 mt-1" placeholder="Enter email" value="<%= typeof email !='undefined' ? email: '' %>" />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control mb-2 mt-1" placeholder="Create password" value="<%= typeof email !='undefined' ? password: '' %>" />
                    </div>

                    <div class="form-group">
                        <label for="password2">Comfirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control mb-3 mt-1" placeholder="Confirm password" value="<%= typeof email !='undefined' ? password2: '' %>" />
                    </div>
                    <button type="submit" class="btn btn-danger btn-block">Register</button>
                </form>

                <p class="lead mt-4" style="font-size: 15px; letter-spacing: 0.5px;">Have An Account? <a href="/users/login"> Login</a></p>
        </div>
    </div>
</div>