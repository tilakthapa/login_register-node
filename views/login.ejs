<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i> Login</h1>
            <%- include('./partials/messages') -%>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control mb-2 mt-1" placeholder="Enter email" />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control mb-3 mt-1" placeholder="Enter password" />
                    </div>
                    <button type="submit" class="btn btn-danger btn-block">Login</button>
                </form>

                <p class="lead mt-4" style="font-size: 15px; letter-spacing: 0.5px;">No Account?<a href="/users/register"> register</a></p>
        </div>
    </div>
</div>